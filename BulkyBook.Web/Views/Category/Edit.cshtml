@model Category
@{
    ViewData["Title"] = "Edit category";
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Category</h2>
            <hr/>
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="Name">Category Name</label>
            <input asp-for="Name" type="text" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
            <br/>
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" type="number" class="form-control"/>
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            <br/>
        </div>
        <div>
            <button class=" btn btn-primary" type="submit" style="width:150px">Submit</button>
            <a class="btn btn-secondary" asp-controller="Category" asp-action="Index" style="width: 150px">Back to list</a>
        </div>
    </div>
    
</form>
@*Client-side validation*@
@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}